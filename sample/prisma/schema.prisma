generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  passwordHash  String?   @db.VarChar(255)
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts Account[]
  sessions Session[]
  articles Article[]
  wordpressIntegrations WordpressIntegration[]

  // Billing / subscriptions (Paddle Billing)
  plan                Plan                 @default(free)
  subscriptionStatus  SubscriptionStatus   @default(inactive)
  paddleCustomerId    String?              @db.VarChar(255)
  paddleSubscriptionId String?             @db.VarChar(255)
  paddlePriceId       String?              @db.VarChar(255)
  currentPeriodEnd    DateTime?
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model SignupToken {
  id        String   @id @default(cuid())
  email     String
  tokenHash String   @unique @db.VarChar(64)
  expires   DateTime
  createdAt DateTime @default(now())

  @@index([email, expires])
}

enum ArticleStatus {
  draft
  complete
  failed
}

enum Plan {
  free
  pro
  premium
}

enum SubscriptionStatus {
  inactive
  active
  past_due
  canceled
}

model Article {
  id        String        @id @default(cuid())
  userId    String
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt

  videoUrl String
  videoId  String

  title String
  slug  String

  markdown String @db.LongText
  status   ArticleStatus @default(complete)

  metaJson Json?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Optional WordPress publishing linkage (Option A now, plugin later).
  wordpressIntegrationId String?
  wordpressPostId        Int?
  wordpressPostUrl       String? @db.VarChar(2048)

  wordpressIntegration WordpressIntegration? @relation(fields: [wordpressIntegrationId], references: [id], onDelete: SetNull)

  @@index([userId, createdAt])
  @@index([videoId])
  @@index([wordpressIntegrationId])
}

model WordpressIntegration {
  id        String   @id @default(cuid())
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Site identity
  // Keep this index-safe for MySQL utf8mb4 (used in @@unique below).
  // This is the *base* site URL, so 512 is more than enough.
  siteUrl  String @db.VarChar(512)

  // Option A (Application Passwords)
  username       String @db.VarChar(255)
  appPasswordEnc String @db.LongText

  // Optional: result of last verification
  lastVerifiedAt DateTime?
  wpUserId       Int?

  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  articles Article[]

  @@unique([userId, siteUrl])
  @@index([userId, updatedAt])
}



