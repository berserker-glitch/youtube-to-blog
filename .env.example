## OpenRouter (required)
OPENROUTER_API_KEY="your_openrouter_key_here"

## OpenRouter (recommended metadata)
OPENROUTER_REFERER="http://localhost:3000"
OPENROUTER_TITLE="YouTube-to-Blog"

## Model routing
OPENROUTER_MODEL_CHAPTERS="google/gemini-2.0-flash"
OPENROUTER_MODEL_WRITER="google/gemini-2.5-flash"

## Database (MySQL) - used by the SaaS app under `sample/`
# Note: URL-encode special characters in USER/PASSWORD.
# For example, '#' must be written as '%23', '@' as '%40', ':' as '%3A'.
DATABASE_URL="mysql://USER:PASSWORD@HOST:3306/DBNAME"

## NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="replace_me_with_a_long_random_secret"

## Email (Gmail SMTP)
EMAIL_SERVER_HOST="smtp.gmail.com"
EMAIL_SERVER_PORT="465"
EMAIL_SERVER_USER="your_google_email@gmail.com"
EMAIL_SERVER_PASSWORD="your_google_app_password"
EMAIL_FROM="ArticleAlchemist <your_google_email@gmail.com>"

## Integrations (encrypt credentials at rest)
# Generate a key: `node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"`
INTEGRATIONS_ENCRYPTION_KEY="replace_me_base64_32_bytes"

## Quotas
DAILY_GENERATION_LIMIT="100"

## Paddle Billing (subscriptions / payments)
# Main product for paid plans
PADDLE_PRODUCT_ID_PRO="pro_xxxxxxxxxxxxxxxxxxxxxxx"

# Price IDs for monthly plans
PADDLE_PRICE_ID_PRO_MONTHLY="pri_xxxxxxxxxxxxxxxxxxxxxxx"      # Pro – $8/month
PADDLE_PRICE_ID_PREMIUM_MONTHLY="pri_xxxxxxxxxxxxxxxxxxxxxxx"  # Premium – $12/month

# Client-side token for Paddle.js
PADDLE_CLIENT_TOKEN="live_xxxxxxxxxxxxxxxxxxxxxxx"

# Webhook signing secret (used server-side to verify Paddle webhooks)
PADDLE_WEBHOOK_SECRET="ntfset_xxxxxxxxxxxxxxxxxxxxxxx"

# Secret API key for Paddle Billing (server-side)
# Fill this with your Paddle Billing "Secret key" from the dashboard.
PADDLE_SECRET_KEY="pdl_live_apikey_xxxxxxxxxxxxxxxxxxxxxxx_xxxxxxxxxxxxxxxxxxxxxxx_xxxxxxxxxxxxxxxxxxxxxxx"

